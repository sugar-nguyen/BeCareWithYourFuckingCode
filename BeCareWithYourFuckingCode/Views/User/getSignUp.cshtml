@model BeCareWithYourFuckingCode.Models.TB_USER
@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="h-100 bg-light" style="margin-left:-15px; margin-right: -15px;">
    <div class="container p-5 w-75">
        <h2>Đăng ký</h2>
        <form action="/User/getSignUp" method="post">
            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Tên đăng nhập</label>
                <div class="col-sm-8">
                    @Html.TextBoxFor(x => x.USERNAME, new {@class = "form-control", @placeholder = "Tên đăng nhập" })
                    <small class="text-danger">@Html.ValidationMessageFor(x => x.USERNAME)</small>
                </div>
                <div class="col-sm-1">*</div>
            </div>
            <div class="form-group row">
                <label for="inputPassword3" class="col-sm-3 col-form-label">Mật khẩu</label>
                <div class="col-sm-8">
                    @Html.PasswordFor(x => x.PASSWORD_KEY, new { @class = "form-control", @placeholder = "Mật khẩu" })
                    <small class="text-danger">@Html.ValidationMessageFor(x=>x.PASSWORD_KEY)</small>
                </div>
                <div class="col-sm-1">*</div>
            </div>
            <div class="form-group row">
                <label for="inputPassword3" class="col-sm-3 col-form-label">Nhắc lại mật khẩu</label>
                <div class="col-sm-8">
                    <input type="password" class="form-control" id="inputPassword3" placeholder="Nhắc lại mật khẩu">
                </div>
                <div class="col-sm-1">*</div>
            </div>
            <div class="form-group row">
                <label for="inputPassword3" class="col-sm-3 col-form-label">Họ tên</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="inputPassword3" placeholder="Họ tên">
                    <small class="text-danger">@Html.ValidationMessageFor(x => x.NAME)</small>
                </div>
                <div class="col-sm-1">*</div>
            </div>
            <div class="form-group row">
                <label for="inputPassword3" class="col-sm-3 col-form-label">Địa chỉ hiện tại</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="inputPassword3" placeholder="Địa chỉ hiện tại">
                    <small class="text-danger">@Html.ValidationMessageFor(x => x.CURRENT_ADDRESS)</small>
                </div>
                <div class="col-sm-1">*</div>
            </div>
            <div class="form-group row">
                <label for="inputPassword3" class="col-sm-3 col-form-label">Số điện thoại</label>
                <div class="col-sm-8">
                    <input type="number" class="form-control" id="inputPassword3" placeholder="Số điện thoại">
                    <small class="text-danger">@Html.ValidationMessageFor(x => x.PHONE)</small>
                </div>
                <div class="col-sm-1">*</div>
            </div>
            <div class="form-group row">
                <div class="col-sm-3">
                    <button type="submit" class="btn btn-primary">Đăng ký</button>
                </div>
                <div class="col-sm-8" >
                    <small>* Bắt buộc</small>
                </div>
            </div>
        </form>
    </div>
</div>



