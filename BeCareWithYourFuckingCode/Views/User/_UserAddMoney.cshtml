@model BeCareWithYourFuckingCode.Models.TB_CARD_DEAL_HISTORY



<h4 class="text-danger font-weight-bold" style="padding:6px;">Nạp tiền vào tài khoản</h4>
<hr />
<p class="text-black-50 font-weight-bold blockquote">Quý khách khi nạp tiền vui lòng chọn đúng <mark>mệnh giá</mark> và <mark>nhà mạng </mark> Nếu quý khách chọn sai chúng tôi sẽ không chịu bất kì trách nhiệm nào nếu có mất mát xảy ra.</p>
<div class="container" style="border-radius:20px; padding:20px;">
   
    @using (Html.BeginForm())
    {
        
        <div class="row">
            <div class="col-25">
                <label>Nhà mạng</label>
            </div>
            <div class="col-75">
                <select style="cursor:pointer;" name="COMPANY">
                    <option selected>Chọn nhà mạng</option>
                    <option value="viettel">Viettel</option>
                    <option value="vinaphone">Vinaphone</option>
                    <option value="mobifone">Mobifone</option>
                    <option value="vietnammobile">Vietnammobile</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label>Mệnh giá</label>
            </div>
            <div class="col-75">
                <select style="cursor:pointer;" name="DENOMINATIONS">
                    <option selected>Chọn mệnh giá</option>
                    <option value="20000">20,000</option>
                    <option value="50000">50,000</option>
                    <option value="100000">100,000</option>
                    <option value="200000">200,000</option>
                    <option value="500000">500,000</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label>Số seri</label>
            </div>
            <div class="col-75">
                <input type="text" placeholder="Nhập số seri..." name="SERIAL_NUMBER">
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label>Mã thẻ</label>
            </div>
            <div class="col-75">
                <input type="text" placeholder="Nhập mã thẻ.." name="CARD_NUMBER">
            </div>
        </div>
        <div class="row">
            <button type="submit" class="btn btn-secondary offset-5" style="border-radius:50px; padding:12px 20px; cursor:pointer">NẠP THẺ</button>
        </div>
        <small class="text-danger" id="message"></small>
    </div>
    }

    <style>
        .col-25 {
            float: left;
            width: 25%;
            margin-top: 6px;
        }

        .col-75 {
            float: left;
            width: 75%;
            margin-top: 6px;
        }

        input[type=text], select, textarea {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 4px;
            resize: vertical;
        }

        label {
            padding: 12px 12px 12px 0;
            display: inline-block;
        }
    </style>
