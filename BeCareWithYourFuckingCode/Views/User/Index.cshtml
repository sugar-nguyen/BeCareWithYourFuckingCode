@model BeCareWithYourFuckingCode.Models.TB_USER

@{
    Layout = null;
}
@if (ViewBag.Success != null)
{
    <script>
        alert('@ViewBag.Success');
    </script>
}
<form action="/User/getLogin" method="post">
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-group">
            @Html.ValidationSummary(true, "", new {@class = "text-danger" })
        </div>
        <div class="form-group">
            <label>@Html.DisplayNameFor(x => x.USERNAME)</label>
            @Html.TextBoxFor(x => x.USERNAME, new { @class = "form-control", @placeholder = "Tên đăng nhập", @autofocus = "" })
            <small class="text-danger">@Html.ValidationMessageFor(x => x.USERNAME)</small>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">@Html.DisplayNameFor(x => x.PASSWORD_KEY)</label>
            @Html.PasswordFor(x => x.PASSWORD_KEY, new { @class = "form-control", @placeholder = "Mật khẩu"})
            <small class="text-danger">@Html.ValidationMessageFor(x=>x.PASSWORD_KEY)</small>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Ghi nhớ</label>
            <a href="#" title="">Quên mật khẩu</a><br>
            <small>Chưa có tài khoản </small><a href="/User/getSignUp" class="text-danger" title="">Đăng ký </a><small> hoặc đăng nhập bằng </small><a href="#" title="">Facebook</a>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
        <button class="btn btn-success" type="submit">Đăng nhập</button>

    </div>
</form>


