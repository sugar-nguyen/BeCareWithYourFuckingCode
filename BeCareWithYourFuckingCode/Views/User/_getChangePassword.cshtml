@model BeCareWithYourFuckingCode.Models.TB_USER

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="row">
            <div class="col-md-12 w-75 m-0 p-5">
                <h3 class="text-danger text-center mt-2 text-dark font-weight-bold h5">ĐỔI MẬT KHẨU</h3>
                <form method="POST" onsubmit="return false;" id="formChangePass" class="form-group">
                    <div class="form-group">
                        <label class="text-black-50 overflow-hidden">Mật khẩu cũ</label>
                        <input type="password" class="form-control form-control-sm" id="old_pass" aria-label="Mật khẩu cũ">
                    </div>
                    <div class="form-group">
                        <label class="text-black-50 overflow-hidden ">Mật khẩu mới</label>
                        <input type="password" class="form-control form-control-sm" id="new_pass">
                    </div>
                    <div class="form-group">
                        <label class="text-black-50 overflow-hidden">Nhập lại mật khẩu mới</label>
                        <input type="password" class="form-control form-control-sm" id="re_new_pass">
                    </div>
                    <div class="form-group text-center">
                        <a href="index.php" class="btn btn-primary text-center" type="submit">
                            Trở về
                        </a>
                        <button class="btn btn-primary text-center" id="submit_change_pass" type="submit">
                            Thay đổi
                        </button>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
}


