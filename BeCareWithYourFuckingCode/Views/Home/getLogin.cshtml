@model BeCareWithYourFuckingCode.Models.TB_USER

@{
    Layout = null;
}

<form action="/" method="post">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="modal-body">
        <div class="form-group">
            <label for="exampleInputEmail1">@Html.DisplayNameFor(x => x.USERNAME)</label>
            @*<input type="text" class="form-control" id="" placeholder="abc...">*@
            @Html.TextBoxFor(x => x.USERNAME, new {@class = "form-control", @placeholder = "...." })
            <label class="text-danger">@Html.ValidationMessageFor(x => x.USERNAME)</label>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">@Html.DisplayNameFor(x => x.PASSWORD_KEY)</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="*******">
            <label class="text-danger">@Html.ValidationMessageFor(x => x.PASSWORD_KEY)</label>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Ghi nhớ</label>
            <a href="#" title="">Quên mật khẩu</a><br>
            <small>Chưa có tài khoản </small><a href="#" title="" data-dismiss="modal">Đăng ký </a><small>hoặc đăng nhập bằng </small><a href="#" title="">Facebook</a>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
        <button type="submit" class="btn btn-primary">Đăng nhập</button>

    </div>
</form>
